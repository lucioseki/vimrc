" Show line number
set number

" 2 spaces instead of tab
set autoindent
set smarttab
set shiftwidth=2
set softtabstop=2
set tabstop=2

" Autocompletion of the commands
set wildmenu
set wildmode=list:longest,full

" Create .swp files inside .vim directory
set backup
set backupdir=~/.vim/backup
set directory=~/.vim/tmp
set cmdheight=3

" Underline current line
set cul
